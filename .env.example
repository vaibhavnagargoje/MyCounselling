# ==============================================
# ENVIRONMENT CONFIGURATION
# ==============================================
# Set to True for development, False for production
DEBUG=True

# ==============================================
# SECURITY
# ==============================================
# Generate a new secret key for production: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY='your-secret-key-here'

# ==============================================
# DOMAIN & HOSTS (Production Only)
# ==============================================
DOMAIN_NAME=your-domain.com
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# ==============================================
# DATABASE CONFIGURATION (Production)
# ==============================================
# In development, local settings are used (root/8806@localhost)
# In production, configure these environment variables
DB_ENGINE=django.db.backends.mysql
DB_NAME=ecounselling
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_HOST=your-db-host
DB_PORT=3306

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD='your-app-password'
EMAIL_PORT=587
EMAIL_USE_TLS=True
